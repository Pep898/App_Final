<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textdadesRutaModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dades Ruta"
                android:textSize="26dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom" />

            <EditText
                android:id="@+id/editNomModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nom"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textDescripcioModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcio" />

            <EditText
                android:id="@+id/editDescripcioModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Descripcio"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textPublicaModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estat" />

            <RadioGroup
                android:id="@+id/grupModificar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/btnPrivatModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="checkBtnModificar"
                    android:text="privat" />

                <RadioButton
                    android:id="@+id/btnPublicModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="checkBtnModificar"
                    android:text="public" />

                <RadioButton
                    android:id="@+id/btnAmicsModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="checkBtnModificar"
                    android:text="nomes amics" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtEstatModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnGuardarModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarModificar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>